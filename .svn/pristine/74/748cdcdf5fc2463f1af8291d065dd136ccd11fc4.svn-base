<ion-header>
 
  <ion-toolbar> 

    <ion-buttons left (click)="dismiss()"> 
      <button ion-button><ion-icon name="ios-arrow-back-outline"></ion-icon></button> 
    </ion-buttons> 

    <ion-title mode="ios"> 支付保证金 </ion-title> 

  </ion-toolbar>

</ion-header>

<ion-content>

 <div class="content_wrap content_wrap02" *ngIf="!balancePay">
        
        <div class="pay_money_box">
          <p><em>{{info.bond}}</em> 元</p>
        </div>
        <div class="pay_online">
          <h5 class="tit">在线支付</h5>
          <ul class="online_list">
            <li (click)="payType(3)">
              <span class="pay01">支付宝</span>
              <i [ngClass]="{'active':payway==3}"></i>
            </li>
            <li (click)="payType(4)">
              <span class="pay02">微信支付</span>
              <i [ngClass]="{'active':payway==4}"></i>
            </li>
            
          </ul>
        </div>
        <div class="pay_extra">
          <h5 class="tit">余额支付</h5>
          <div class="pay_item" (click)="payType(2)">
            <span>余额支付</span>
            <span>
              可用余额 {{balance}} 元
              <i [ngClass]="{'active':payway==2}"></i>
            </span>
          </div>
        </div>
        <div class="pay_extra" style="padding: 10px;">
          <b style="color: red;">注意：</b>
          <p style="padding-left: 14px;">1.保证金,任务完成并评价后将退回我的钱包</p>
          <p style="padding-left: 14px;">2.任务酬金,任务完成并评价后将打入我的钱包</p>
        </div>
        <div class="confirm_wrap">
          <button type="button" (click)="confirmPay()" class="confirm_btn">确认支付</button>
        </div>
   </div>  

   <div class="content_wrap content_wrap02" *ngIf="balancePay">
        <div class="detail_top">
          <span class="forward_icon"></span>
            <p class="detail_psotion">余额支付</p>
        </div>
        <div class="pay_money_box">
            <p><em>{{info.bond}}</em> 元</p>
             <div class="pwd_edite">
                <input type="password" [(ngModel)]="paypwd" placeholder="支付密码">
            </div>
        </div>
        <div class="confirm_wrap">
          <button type="button" (click)="confirmBalancePay()" class="confirm_btn">确认支付</button>
            <a href="#" *ngIf="!haspaypwd" (click)="setpaypwd()" class="setpay_link">设置支付密码</a>
        </div>
   </div>     

</ion-content>
