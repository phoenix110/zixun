<ion-header>
  <ion-toolbar>
    <ion-title>
      搜索
    </ion-title>

    <ion-buttons start>
      <button ion-button (click)="dismiss()">
        <span ion-text color="primary" showWhen="ios">Cancel</span>
        <ion-icon name="md-close" showWhen="android,windows"></ion-icon>
      </button>
    </ion-buttons>
  </ion-toolbar>
</ion-header>

<ion-content>
<ion-searchbar
  [animated] = "true"
  [(ngModel)]="keywords"
  [showCancelButton]="true"
  (ionInput)="onInput($event)"
  (ionCancel)="onCancel($event)">
  (ionClear)="onClear($event)">
</ion-searchbar>

<section>
    <div class="top">
      <div class="top_logo">
        <a href="#">
          <img src="assets/img/login_logo.png" alt="有空吗" title="有空吗">
        </a>
      </div>
      <div class="topsear_wrap">
        <input type="text" id="searchInput" autofocus="autofocus" class="topsear_txt" [(ngModel)]="keywords" placeholder="搜索环保任务">
        <button type="submit" (click)="searchDemand()" class="upsear_btn"></button>
      </div>
    </div>
  </section>
  <ion-list *ngIf="active">
  <ion-item *ngFor="let item of items">
    {{ item }}
  </ion-item>
  <ion-item (click)="more()">
    查看更多热搜
  </ion-item>
  </ion-list>
  
</ion-content>
